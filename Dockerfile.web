# 1. Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Másoljuk be a sln-t és az összes csproj-ot


COPY Terjeki.Scheduler.Core/*.csproj   Terjeki.Scheduler.Core/
COPY Terjeki.Scheduler.Infrastucure/*.csproj Terjeki.Scheduler.Infrastucure/
COPY Terjeki.Scheduler.Application/*.csproj    Terjeki.Scheduler.Application/
COPY Terjeki.Scheduler.Web/*.csproj            Terjeki.Scheduler.Web/

# Restore NuGet-csomagok
RUN dotnet restore

# Másoljuk be az egész kódot, és publish
COPY . .
WORKDIR /app/Terjeki.Scheduler.Web
RUN dotnet publish -c Release -o out /p:UseAppHost=false

# 2. Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
EXPOSE 80

# Másoljuk át a publishelt fájlokat
COPY --from=build /app/Terjeki.Scheduler.Web/out ./

ENTRYPOINT ["dotnet", "Terjeki.Scheduler.Web.dll"]